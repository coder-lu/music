  /* 轮播图 */
.index{
  width: 100%;
  height: 300rpx;
}
.index .banner{
  height: 100%;
}
.index image{
  width: 100%;
  height: 100%；
}

/* 五个图标 */
.navIndex{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  justify-content: center;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  color: #fff;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}

/* 歌曲推荐 */
.navgequ{
  font-size: 26rpx;
  margin-left: 25rpx;
}
.navgequ .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.navgequ .header{
  padding-bottom: 30rpx;
}
.navgequ .header .rigth{
  height: 25rpx;
  line-height: 25rpx;
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

/* 内容区 */
.scrollItem{
  display: flex;
  height: 300rpx;
}
.scrollItem .scroll{
  width: 200rpx;
  margin-right: 20rpx ;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;/* 对齐模式*/
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 排行榜 */
.topListswiper{
