.imgText{
    display: flex;
    font-size: 26rpx;
    background-color: #fff;
    height: 250rpx;
    border-bottom: 10rpx solid rgb(245, 245, 245);
}
.imgText image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin: 20rpx;
}
.imgText .name{
    margin: 30rpx ;
    font-size: 30rpx;
} 
.imgText text{
    position: absolute;
    top: 80rpx;
    left:35.5%;
}
.List{
    display: flex;
    font-size: 26rpx;
    margin: 20rpx;
}
.List .rigth{
    margin-left: 350rpx;
}
.List .rigth .text{
    margin: 20rpx;
    color: black;
}
.Listmessage{
    position: relative;
    margin: 20rpx;
    padding: 20rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #eee;
}
.message{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}
.Listmessage image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.message .name{
    margin: 0 20rpx;
}
.message text{
    position: absolute;
    top: 45rpx;
    left: 14%;
    font-size: 24rpx;
    color: #eee;
}
.Listmessage .mes{
    margin-left: 100rpx;
    word-wrap: break-word;
    /* word-break: break-all; */
}
.active{
    font-size: 26rpx;
    border-bottom: 1rpx solid red;
}
.message .iconfont{
    position: absolute;
    top: 2%;
    left: 85%;
    margin-right: 20rpx;
}
.message .dianzhan{
    position: absolute;
    top: 0;
    left: 91%;
    color: black;
    font-size: 22rpx;
}