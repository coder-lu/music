.video .header{
    padding: 10rpx;
    display: flex;
}
.video .header image{
    width: 60rpx;
    height: 60rpx;
}
.video .header .input{
    flex: 1;
    border: 1rpx solid #eee;
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
}

/* 导航 */
.navScroll{
    display: flex;
    white-space: nowrap;
    height: 60rpx;

}
 .navScroll .item{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.navScroll .navItem{
    box-sizing: border-box;
    height: 60rpx;
}
.navScroll .active{
    border-bottom: 1rpx solid #d43c33;
}

.videoItem{
    padding: 0 3%;
}
.videoItem video{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}

.videoname{
    width: 95%;
    height: 60rpx;
    line-height: 60rpx;
    /* margin: 10rpx; */
    margin-bottom: 40rpx;
    font-size: 26rpx;
    border-bottom: 1rpx solid #eee;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}